﻿<MudCard>
    <MudCardMedia Image="images/cardArtista.png"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Login!.Usuario </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Login!.Senha</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
                   Variant="Variant.Outlined"
                   Href=@($"/Acesso/api/Login/{Login!.Usuario}")>Detalhes</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public Login? Login { get; set; }

}